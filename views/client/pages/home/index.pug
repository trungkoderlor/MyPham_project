extends ../../../client/layouts/default.pug
include ../../mixins/carouselSlide.pug
block head
  link(rel="stylesheet", href="/css/home.css")
block main 
  .container
    .row
      .col-md-12
        +carouselSlide(posters)
    .container.bestseller
      .row
        .col-md-12
          h2.text-center.mb-4(style="margin-bottom:10px") Sản Phẩm Bán Chạy
          .inner-dir 
      .row
        each item in bestSellProducts
          .col-6.col-md-4.col-lg-3
            .product-item
              .inner-image
                img(
                  src=item.thumbnail 
                  alt=item.title
                )
              .inner-content
                h3.inner-title 
                  a(href=`/products/${item.slug}`) #{item.title}
                .row
                  .col-12
                    .inner-price-new #{item.priceNew}$   
                    .inner-price-old #{item.price}$              
                    .inner-discount -#{item.discountPercentage}% 
    .container.bestseller
      .row.mt-4
        .col-md-12
          h2.text-center.mb-4(style="margin-bottom:10px") Sản Phẩm Nổi Bật
          .inner-dir
      .row 
        each item in feautedProducts
          .col-6.col-md-4.col-lg-3
            .product-item
              .inner-image
                img(
                  src=item.thumbnail 
                  alt=item.title
                )
              .inner-content
                h3.inner-title 
                  a(href=`/products/${item.slug}`) #{item.title}
                .row
                  .col-8
                    .inner-price-new #{item.priceNew}$   
                    .inner-price-old #{item.price}$              
                    .inner-discount -#{item.discountPercentage}%
      .row 
        .col-md-12.text-center
          a.btn.btn-primary.btn-sm.mb-4(href="/products") Xem Thêm ...
                
              
      