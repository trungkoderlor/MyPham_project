extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error(expressFlash,5000)
  +alert-success(expressFlash,5000)


  .container
    .row.justify-content-center
      img(src="/images/dhtlogo-removebg.png" class="img-fluid mb-3" alt="Logo" width="135px")


    .row.justify-content-center
      .col-12.col-md-4.col-lg-6
        .card.shadow-lg
          .card-body
            h1(class="text-center mb-4") Đăng nhập quản trị
            form(
              action=`${prefixAdmin}/auth/login`
              method="POST"
            )
              div.email-form(class="form-group")
                label(for="email") Email
                input(
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Nhập email của bạn"
                  required
                )
              div.pass-form(class="form-group")
                label(for="password") Mật khẩu
                input(
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Nhập mật khẩu của bạn"
                  required
                )
              div.btn-login(class="form-group text-center")
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Đăng nhập
